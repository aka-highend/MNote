<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rfachrur.mnote">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.rfachrur.mnote.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.rfachrur.mnote.DetailsActivity"
            android:parentActivityName="com.rfachrur.mnote.MainActivity"
            android:windowSoftInputMode="adjustResize"/>

        <activity
            android:name="com.rfachrur.mnote.TrashActivity"
            android:parentActivityName="com.rfachrur.mnote.MainActivity"
            android:theme="@style/AppTheme.NoActionBar"/>

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="d214d0f415c07520b3b64f336d8c60ab0702446b" />
    </application>

</manifest>